@model IEnumerable<DnDesigner.Models.Subclass>

@{
    ViewData["Title"] = "ViewSubclasses";
}

<h1>ViewSubclasses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceString)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceString)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubclassId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubclassId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubclassId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
