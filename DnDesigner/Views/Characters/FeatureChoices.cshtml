@model FeatureChoiceViewModel
@{
    ViewData["Title"] = "Feature Choices";
}

<h1>View Features</h1>
<hr />

<form asp-action="FeatureChoices">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="accordion" id="Features">
            @foreach(CharacterFeature characterFeature in Model.CharacterFeatures)
            {
                Feature feature = characterFeature.Feature;
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#panelsStayOpen-@feature.FeatureId" aria-expanded="true"
                                aria-controls="panelsStayOpen-@feature.FeatureId">
                            @feature.ToString()
                        </button>
                    </h2>
                    <div id="panelsStayOpen-@feature.FeatureId" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <strong>@feature.Description</strong>
                            <br />
                            @foreach (CharacterChoice choice in characterFeature.Choices)
                            {
                                <select asp-for="@Model.ChoiceValues[choice.CharacterChoiceId]">
                                    @foreach (KeyValuePair<int, string> option in choice.Choice.Options)
                                    {
                                        <option value="@option.Key">@option.Value</option>
                                    }
                                </select>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="button" value="Back" class="btn btn-danger" onclick="location.href='@Url.Action("Edit", "Characters", new {id = Model.CharacterId})'" />
    </div>
    <!--Hidden Storage Start-->
    <input type="hidden" asp-for="CharacterFeatures" />
    <input type="hidden" asp-for="CharacterId" />
    <!--Hidden Storage End-->
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
